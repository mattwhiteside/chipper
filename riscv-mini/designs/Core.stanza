#use-syntax(core, chipper)

defpackage Core :
   import core
   import verse
   import chipper
   import Params
   import Datapath
   import Control
   import CSR
   import Memory

public defmodule Core :
  input  stall  : Bool
  output host   : HostIO
  output icache : CacheIO
  output dcache : CacheIO

  inst dpath of Datapath
  inst ctrl  of Control

  host := dpath.host
  icache := dpath.icache
  dcache := dpath.dcache
  dpath.ctrl := ctrl.ctrl
  dpath.stall := stall

